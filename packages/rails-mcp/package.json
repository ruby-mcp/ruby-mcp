{
  "name": "@ruby-mcp/rails-mcp",
  "version": "0.3.0",
  "description": "MCP server for interacting with Rails CLI - list generators, get help, and execute Rails generators",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rails-mcp": "dist/index.js"
  },
  "files": ["dist/**/*", "README.md", "LICENSE"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "rails",
    "ruby",
    "generators",
    "cli"
  ],
  "author": "fugufish",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@vitest/coverage-v8": "^1.0.0",
    "happy-dom": "^12.0.0",
    "msw": "^2.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruby-mcp/ruby-mcp.git",
    "directory": "packages/rails-mcp"
  },
  "bugs": {
    "url": "https://github.com/ruby-mcp/ruby-mcp/issues"
  },
  "homepage": "https://github.com/ruby-mcp/ruby-mcp/tree/main/packages/rails-mcp#readme"
}
